<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="invoices.controller.MainView"
    displayBlock="true"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page
                    id="page"
                    title="{i18n>title}"
                >
                    <content>
                        <Panel
                            id="_IDGenPanel1"
                            headerText="{i18n>selectionScreen}"
                        >
                            <Label
                                id="labelShipName"
                                labelFor="shipName"
                                text="{i18n>shipName}"
                                class="sapUiSmallMargin"
                            />
                            <Input
                                id="shipName"
                                value="{SelectionScreen>/ShipName}"
                                width="200px"
                                class="sapUiTinyMarginEnd"
                            />
                            <Label
                                id="labelCountry"
                                text="{i18n>country}"
                                class="sapUiSmallMargin"
                            />
                            <Select
                                xmlns="sap.m"
                                id="slCountry"
                                selectedKey="{SelectionScreen>/CountryKey}"
                                class="sapUiSmallMarginEnd"
                                forceSelection="false"
                                items="{SelectionScreen>/Countries}"
                            >
                                <items>
                                    <core:Item
                                        id="_IDGenItem1"
                                        key="{SelectionScreen>key}"
                                        text="{SelectionScreen>text}"
                                    />
                                </items>
                            </Select>
                            <Button
                                id="btnFilter"
                                text="{i18n>btnFilter}"
                                press="onFilter"
                                icon="sap-icon://filter"
                                class="sapUiSmallMarginEnd"
                                type="Emphasized"
                            />
                            <Button
                                id="btnClearFilter"
                                text="{i18n>btnClearFilter}"
                                press="onClearFilter"
                                icon="sap-icon://clear-filter"
                                type="Reject"
                            />
                        </Panel>
                        <Panel
                            id="_IDGenPanel2"
                            headerText="{i18n>selectionScreenHeader}"
                        >
                            <List
                                id="_IDGenList1"
                                items="{/Invoices}"
                            >
                                <items>
                                    <ObjectListItem
                                        id="_IDGenObjectListItem1"
                                        title="{ShipName} - {Country}"
                                        number="{ parts: [
                                                            {path: 'ExtendedPrice'},
                                                            {path: 'SelectionScreen>/Currency'}],
                                                  type: 'sap.ui.model.type.Currency',
                                                  formatOptions: {
                                                    showMeasure: false
                                                  }}"
                                        numberUnit="{SelectionScreen>/Currency}"
                                        numberState="{= ${ExtendedPrice} > 100 ? 'Warning' : 'Success'}"
                                    />
                                </items>
                            </List>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
