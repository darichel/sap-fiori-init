<mvc:View xmlns:core="sap.ui.core" controllerName="invoices.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

<Shell id="shell">
    <App id="app">
        <pages>
            <Page id="page" title="{i18n>title}">
                <content>
                    <Panel id="_IDGenPanel1" headerText="{i18n>selectionScreen}">
                        <Label id="labelShipName" labelFor="shipName" text="{i18n>shipName}" class="sapUiSmallMargin" />
                        <Input id="shipName" width="200px" class="sapUiTinyMarginEnd" />
                        <Label id="labelCountry" text="{i18n>country}" class="sapUiSmallMargin" />
                        <Select xmlns="sap.m" id="slCountry" selectedKey="{SelectionScreenMenu>/CountryKey}" forceSelection="false" items="{SelectionScreenMenu>/Countries}">
                            <items>
                                <core:Item id="_IDGenItem1" key="{SelectionScreenMenu>key}" text="{SelectionScreenMenu>text}" />
                            </items>
                        </Select>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
</Shell>   
        
</mvc:View>
